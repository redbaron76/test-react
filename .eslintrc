{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "jsxBracketSameLine": true,
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 100,
                "tabWidth": 2,
                "semi": true
            }
        ]
    },
    "plugins": [
        "prettier",
        "react"
    ]
}